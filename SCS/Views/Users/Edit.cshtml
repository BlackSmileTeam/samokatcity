@model SCS.Models.User

@{
    ViewBag.Title = "Изменить пользователя";
}

<div class="orderTable">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Редактировать данные о пользователе</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="moreInformationOrder">
            <nobr>
                Авторизационные данные
            </nobr>
            <div class="userTable">
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Логин</p>
                    </div>
                    <br />
                    <div class="userTable">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Пароль</p>
                    </div>
                    <br />
                    <div class="userTable">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="moreInformationOrder">
            <nobr>
                Данные о клиенте
            </nobr>
            <div class="userTable">
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Фамилия</p>
                    </div>
                    <br />
                    <div class="userTable">
                        <input class="form-control" name="Surname" id="Surname" />
                    </div>
                </div>
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Имя</p>
                    </div>
                    <br />
                    <div class="userTable">
                        <input class="form-control" name="Name" id="Name" />
                    </div>
                </div>
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Отчетсво</p>
                    </div>
                    <br />
                    <div class="userTable">
                        <input class="form-control" name="Patronymic" id="Patronymic" />
                    </div>
                </div>
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Контактный телефон</p>
                    </div>
                    <br />
                    <div class="userTable">
                        <input class="form-control" name="Phone" id="Phone" />
                    </div>
                </div>
            </div>
        </div>

        <div class="moreInformationOrder">
            <nobr>
                Паспортные данные
            </nobr>
            <div class="userTable">
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Серия и номер паспорта</p>
                    </div>
                    <br />
                    <div class="userTable">
                        <input class="form-control" name="Passport" id="Passport" />
                    </div>
                </div>
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Город</p>
                    </div>
                    <br />
                    <div class="userTable">
                        <input class="form-control" name="City" id="City" />
                    </div>
                </div>
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Улица</p>
                    </div>
                    <br />
                    <div class="userTable">
                        <input class="form-control" name="Street" id="Street" />
                    </div>
                </div>
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Дом</p>
                    </div>
                    <br />
                    <div class="userTable">
                        <input class="form-control" name="Home" id="Home" />
                    </div>
                </div>
                <div class=" moreInformationRates">
                    <div class="userTable">
                        <p>Квартира</p>
                    </div>
                    <br />
                    <div class="userTable">
                        <input class="form-control" name="Apartament" id="Apartament" />
                    </div>
                </div>
            </div>
        </div>





        <div class="col-md-offset-2 mb-5">
            <input type="submit" value="Добавить" class="btn btn btn-danger float-md-left" />
        </div>
    </div>
    }
</div>
