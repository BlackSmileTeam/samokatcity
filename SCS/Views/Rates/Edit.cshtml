@model SCS.Models.Rates

@{
    ViewBag.Title = "Изменить";
}

<div class="container">
    <div class="divTable">
        <h4>
            <b>Изменить данные о тарифе</b>
        </h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Наименование тарифа</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        <label> Время начала действия тарифа</label>
                        @Html.EditorFor(model => model.TimeStart, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TimeStart, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        <label>Время окончания действия тарифа</label>
                        @Html.EditorFor(model => model.TimeEnd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TimeEnd, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        <label> Продолжительность, ч</label>
                        @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        <label> Цена, руб</label>
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        <label>Транспортный тариф</label>
                        @Html.CheckBox("IsTransport", Model.IsTransport, new { @class = "checkboxTransport" })
                    </div>
                </div>
                <div class="col-md-offset-2 col-md-10">

                    <input type="submit" value="Сохранить" class="btn btn btn-primary ml-0 " />
                    <a class="btn btn btn-danger " href="@Url.Action("Index","Rates")">
                        Отмена
                    </a>
                </div>
            </div>
        }

    </div>
</div>
