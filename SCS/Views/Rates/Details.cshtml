@model SCS.Models.Rates

@{
    ViewBag.Title = "Детали";
}

<div class="orderTable">
    <div class="moreInformationOrder">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayName("Модели")
            </dt>
            @if (Model.RatesTransports != null && Model.RatesTransports.Count > 0)
            {
                <table>
                    <tr>
                        <td style="padding-left:0;">Наименование</td>
                        <td style="padding-left:0;">Цена</td>
                    </tr>
                    @foreach (var mod in Model.RatesTransports)
                    {

                        <tr>
                            <td style="padding-left:0;">@mod.TransportModels.Name</td>
                            <td style="padding-left:0;">@mod.Price</td>
                        </tr>
                    }
                </table>
            }
            <dd>
            </dd>
        </dl>
    </div>
</div>
