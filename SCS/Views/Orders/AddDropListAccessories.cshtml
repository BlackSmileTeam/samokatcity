@model IEnumerable<SCS.Models.Accessories>
@{
    Layout = null;
}
<div class="moreInformationOrder" id="accessories-@ViewBag.countTransport">
    <div class="form-group">
        <div class="col-md-10">
            <label>Тариф</label>
            @Html.DropDownList("RatesIdAccessories", ((IEnumerable<SelectListItem>)ViewData["Menu"]), "Выберете значение", htmlAttributes: new { @class = "Rate form-control", @onchange = "calculatePrice()" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 accessories">
            <label>Наименование</label>
            @Html.DropDownList("AccessoriesId",
                               ((IEnumerable<SelectListItem>)ViewData["Menu"]),
                               "Выберете значение",
                               htmlAttributes: new { @class = "Accessories form-control", id = string.Format("Accessories-{0}", ViewBag.countAccessories) })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
        </div>
    </div>
    <button type="button" class="close" aria-label="Close" onclick="deleteBlock('accessories-@ViewBag.countTransport')">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
