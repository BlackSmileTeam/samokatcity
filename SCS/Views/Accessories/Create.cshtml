@model SCS.Models.Accessories

@{
    ViewBag.Title = "Добавить аксессуар";
}
<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="divTable">
            <h2>Новый аксессуар</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10 mb-2">
                    <label>Наименование аксессуара</label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>  <div class="form-group mb-2">
                <div class="col-md-10">
                    <label>Цена</label>
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-offset-2 col-md-10 mb-2">

                <input type="submit" value="Добаивть" class="btn btn btn-primary ml-0 " />
                <a class="btn btn btn-danger " href="@Url.Action("Index","Accessories")">
                    Отмена
                </a>
            </div>
            <br />
        </div>
    }

</div>
