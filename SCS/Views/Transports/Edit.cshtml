@model SCS.Models.Transport

@{
    ViewBag.Title = "Изменить";
}

<div class="container">
    <div class="divTable">
        <h4>
            <b>Изменить данные о транспорте</b>
        </h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    <div class="col-md-10">
                        <label>Наименование модели</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        <label>Наценка за выходной день</label>
                        @Html.EditorFor(model => model.Markup, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Markup, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        <label>Статус</label>

                        @Html.DropDownList("Status", ViewBag.StatusTransport as SelectList, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="col-md-offset-2 col-md-10">

                    <input type="submit" value="Сохранить" class="btn btn btn-primary ml-0 " />
                    <a class="btn btn btn-danger " href="@Url.Action("Index","Transports")">
                        Отмена
                    </a>
                </div>
                <br />
            </div>
        }

    </div>
</div>
