@model SCS.Models.Transport

@{
    ViewBag.Title = "Удалить";
}
<div class="container">
    <div class="divTable">
        <h3>Вы уверены что хотите удалить данную модель транспорта?</h3>
        <div>
            <hr />


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <b>
                    <label>Наименование модели:</label>
                    @Html.DisplayFor(model => model.Name)
                </b>
                <div class="form-actions no-color">
                    <input type="submit" value="ДА" class="btn btn btn-danger float-md-left" />
                    <a class="btn btn btn-primary ml-4" href="@Url.Action("Index","Transports")">
                        Отмена
                    </a>
                </div>
            }
        </div>
    </div>
</div>
