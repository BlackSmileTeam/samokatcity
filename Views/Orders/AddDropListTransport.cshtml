@model IEnumerable<SCS.Models.Transport>
@{
    Layout = null;
}
<div class="moreInformationOrder" id="transport">

    <div class="form-group">
        <div class="col-md-10">
            <label>Наименование тарифа</label>
            @Html.DropDownList("RatesId", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Наименование транспорта</label>
            @Html.DropDownList("TransportId" , null, htmlAttributes: new { @onchange = "countMarkup(this.value)", @class = "form-control", id = string.Format("Transport-{0}", ViewBag.countTransport) })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Количество, шт.</label>
            <input type="number" id="countTransport" name="countTransport" class="form-control" value="0"
                   min="1" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Наценка, руб</label>
            <input class="form-control" name="markup" id="markup" value="0" min="0" />
        </div>
    </div>

</div>




