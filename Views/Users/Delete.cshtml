@model SCS.Models.User

@{
    ViewBag.Title = "Удалить";
}
<div class="orderTable">
    <h3>Вы уверены что хотите удалить данного пользователя?</h3>
    <div>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <b>
                <label>Логин пользователя:</label>
                @Html.DisplayFor(model => model.Username)
            </b>
            <div class="form-actions no-color">
                <input type="submit" value="ДА" class="btn btn btn-danger float-md-left" />
                <a class="btn btn btn-primary ml-4" href="@Url.Action("Index","Users")">
                    Отмена
                </a>
            </div>
        }
    </div>
</div>
