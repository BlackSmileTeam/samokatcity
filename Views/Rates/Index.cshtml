                </th>
                <th>
                    @Html.Label("Время тарифа по")
                </th>
                <th>
                    @Html.Label("Продолжительность")
                </th>
                <th>
                    @Html.Label("Цена")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                if (item.TransportId == null)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Accessories.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeEnd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
